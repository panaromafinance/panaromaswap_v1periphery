{
  "name": "@panaromafinance/panaromaswap_v1periphery",
  "version": "1.0.2",
  "description": "Peripheral smart contracts for Panaromaswap V1",
  "engines": {
    "node": ">=10"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/panaromafinance/panaromaswap_v1periphery"
  },
  "publishConfig": {
    "@panaromafinance": "https://npm.pkg.github.com"
  },
  "files": [
    "build",
    "contracts"
  ],
  "dependencies": {
    "@anders-t/ethers-ledger": "^1.0.4",
    "@panaromafinance/panaromaswap_v1core": "^1.0.2",
    "@panaromafinance/panaromaswap_v1lib": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.6",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "ethereum-waffle": "^2.4.1",
    "ethereumjs-util": "^6.2.0",
    "mocha": "^6.2.2",
    "ncp": "^2.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.0",
    "solc": "0.6.6",
    "ts-node": "^8.5.4",
    "typescript": "^3.7.3"
  },
  "scripts": {
    "lint": "yarn prettier ./test/*.ts --check",
    "lint:fix": "yarn prettier ./test/*.ts --write",
    "clean": "rimraf ./build/",
    "copy-v1-artifacts": "ncp ./buildV1 ./build",
    "precompile": "yarn clean",
    "compile": "waffle .waffle.json",
    "postcompile": "yarn copy-v1-artifacts",
    "pretest": "yarn compile"
  }
